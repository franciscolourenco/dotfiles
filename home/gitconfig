[diff]
 	renames = copy # makes the diff much shorter when moving or copying files
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
[difftool]


[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[mergetool]
	keepBackup = true
